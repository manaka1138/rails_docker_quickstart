<h1>Uploader#form</h1>


<% @upload = UploadFile.new %>
   <%= form_for @upload, :url => {:action => :upload} do |f| %>


     <%= f.label :title, "Name" %><br>
     <%= f.text_field :name %><br>
     <p>
       <%= f.label :text %><br>
       <%= f.text_area :text %>
     <br>
     </p>
     <%= f.label :file %><br>
     <%= f.file_field :file %><br>
<br>
     <%= f.submit "Upload" %>
   <% end %>
